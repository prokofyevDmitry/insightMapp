<?php

$bdd = new PDO('mysql:host=localhost;dbname=insightmapp', 'root', '');



$data = $bdd->query('SELECT id password FROM users ORDER BY id');

while($donne = $data->fetch())
{
$print = $bdd->prepare('UPDATE users SET password=:password WHERE id=:id');
$print->exec(array(
	'password'=>password_hash($donne['password'], PASSWORD_BCRYPT),
		'id'=>$donne['id']);
		
		
))
	



